<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhangqianyuan.teamwork.lostandfound.view.activity.UserInfoAboutUsActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/userinfo_aboutus_toolbar"
        android:background="@drawable/barbackgroud"
        android:layout_width="match_parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="23dp"
            android:textColor="@color/white"
            android:text="关于我们"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_below="@id/userinfo_aboutus_toolbar"
        android:id="@+id/aboutus_headlayout"
        android:layout_width="match_parent"
        android:layout_height="180dp" >
        <ImageView
            android:src="@mipmap/diai"
            android:layout_centerInParent="true"
            android:layout_width="100dp"
            android:layout_height="100dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/aboutus_largelayout1"
        android:layout_below="@id/aboutus_headlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/aboutus_updatelayout"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_marginStart="15dp"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:text="检查更新"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginEnd="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="15dp"
                android:text="已是最新版本"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View

                android:layout_alignParentBottom="true"
                android:id="@+id/aboutus_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/aboutus_updatelayout"
            android:id="@+id/aboutus_applayout"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_marginStart="15dp"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:text="关于递爱"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
           <ImageView
               android:src="@drawable/rightpoint"
               android:layout_centerVertical="true"
               android:layout_marginEnd="10dp"
               android:layout_alignParentRight="true"
               android:layout_width="20dp"
               android:layout_height="30dp" />

            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_below="@id/aboutus_largelayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/aboutus_mainze"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_marginStart="15dp"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:text="免责声明"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@drawable/rightpoint"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="20dp"
                android:layout_height="30dp" />

            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/aboutus_mainze"
            android:id="@+id/aboutus_web"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_marginStart="15dp"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:text="官网"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@drawable/rightpoint"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="20dp"
                android:layout_height="30dp" />
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
