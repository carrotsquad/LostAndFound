<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout      xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.yf107.teamwork.lostandfound.view.activity.AboutDiAi">

    <android.support.v7.widget.Toolbar
        android:id="@+id/setting_bar"
        android:background="#7879ff"
        android:layout_width="match_parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/aboutdiail_back"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:src="@drawable/back" />

        <TextView
            android:textColor="@color/white"
            android:textSize="@dimen/sp_22"
            android:gravity="center"
            android:text="关于递爱"
            android:layout_gravity="center"
            android:id="@+id/aboutus_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </android.support.v7.widget.Toolbar>


    <RelativeLayout
        android:layout_below="@id/setting_bar"
        android:id="@+id/aboutus_headlayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_160" >
        <ImageView
            android:src="@mipmap/diai2"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100" />
    </RelativeLayout>

    <TextView
        android:paddingStart="@dimen/dp_5"
        android:layout_below="@id/aboutus_headlayout"
        android:textColor="@color/black"
        android:id="@+id/aboutdiai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
