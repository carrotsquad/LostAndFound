<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <android.support.v7.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/upload_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="3dp">

            <LinearLayout
                android:id="@+id/rl"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/upload_type_img"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/upload_type_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/upload_type_img"
                    android:gravity="center"
                    android:textSize="20sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <Button
        android:id="@+id/upload_item_delete"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:text="删除"
        android:layout_marginBottom="2dp"
        android:textSize="18sp"
        android:background="@color/pink_400"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/upload_item_finish"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:text="递爱成功"
        android:layout_marginBottom="2dp"
        android:textSize="18sp"
        android:background="@color/babyblue"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/upload_item_edit"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:text="编辑"
        android:layout_marginBottom="2dp"
        android:textSize="18sp"
        android:background="@color/black"
        android:textColor="@color/white" />


</com.mcxtzhang.swipemenulib.SwipeMenuLayout>