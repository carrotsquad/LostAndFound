<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhangqianyuan.teamwork.lostandfound.view.activity.ReturnActivity">

    <RelativeLayout
        android:background="@drawable/barbackgroud"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/thing_found_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back"/>

        <TextView
            android:id="@+id/thing_found_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="我要认领"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp" >
        <ImageView
            android:background="@drawable/no_banner"
            android:id="@+id/thing_found_pic"
            android:layout_centerInParent="true"
            android:layout_width="250dp"
            android:layout_height="150dp" />
    </RelativeLayout>
    <TextView
        android:layout_marginBottom="30dp"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="50dp"
        android:text="@string/toolbar_scroll_behavior"
        android:maxEms="14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:textSize="18sp"
            android:text="QQ:"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
        <EditText
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:hint="单行输入"
            android:layout_width="200dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:textSize="18sp"
            android:text="微信:"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
        <EditText
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:hint="单行输入"
            android:layout_width="200dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:textSize="18sp"
            android:text="电话:"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
        <EditText
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:hint="单行输入"
            android:layout_width="200dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="( 请您提供至少一种联系方式 )"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:background="@android:color/white"
        android:layout_gravity="center"
        android:text="确认认领"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />
</LinearLayout>
