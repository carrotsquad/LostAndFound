<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    tools:context="com.yf107.teamwork.lostandfound.view.activity.UserInfoMyHistory">

    <android.support.v7.widget.Toolbar
        android:id="@+id/setting_bar"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/myhistory_back"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:src="@drawable/zijiantou" />
        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="@dimen/sp_20"
            android:text="我的历史"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </android.support.v7.widget.Toolbar>

   <android.support.v7.widget.RecyclerView
       android:layout_below="@id/setting_bar"
       android:id="@+id/myhistory_list"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

   </android.support.v7.widget.RecyclerView>
</RelativeLayout>
