<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.yf107.teamwork.lostandfound.view.activity.ThingDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:background="@drawable/barbackgroud"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/thing_detail_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/back"/>

            <TextView
                android:id="@+id/thing_detail_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="失物/招领详情"
                android:textColor="@color/white"
                android:textSize="25sp" />
        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"
            android:layout_height="232dp" >
            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </com.youth.banner.Banner>

            <!--<android.support.v4.view.ViewPager-->
            <!--android:layout_marginTop="8dp"-->
            <!--android:id="@+id/thing_detail_viewpager"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent" />-->
            <!--<com.rbrooks.indefinitepagerindicator.IndefinitePagerIndicator-->
            <!--android:id="@+id/thing_viewpager_pager_indicator"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--/>-->


            <!--<include layout="@layout/imageindicatorview_layout"/>-->
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="20dp"
            android:id="@+id/thing_detail_thingsdetail_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/thing_detail_cardrelative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="0dp">
                    <RelativeLayout
                        android:id="@+id/lolollol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/thing_detail_thingsdetail_diushidate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="11dp"
                            android:layout_marginRight="20dp"
                            android:text="2018年11月19日"
                            android:textColor="#000000"/>

                        <TextView
                            android:id="@+id/thing_detail_thingsdetail_place"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_alignTop="@+id/thing_detail_thingsdetail_diushidate"
                            android:layout_marginEnd="31dp"
                            android:text="二教" />

                        <ImageView
                            android:scaleType="fitXY"
                            android:id="@+id/thing_detail_thingsdetail_thingstype"
                            android:layout_width="33dp"
                            android:layout_height="22dp"
                            android:layout_alignTop="@+id/thing_detail_thingsdetail_diushidate"
                            android:layout_marginStart="30dp"
                            android:src="@drawable/littleicon_uflash" />

                        <ImageView
                            android:scaleType="fitXY"
                            android:id="@+id/thing_detail_thingsdetail_losttype"
                            android:layout_width="17dp"
                            android:layout_height="22dp"
                            android:layout_alignTop="@+id/thing_detail_thingsdetail_diushidate"
                            android:layout_marginStart="16dp"
                            android:layout_toRightOf="@+id/thing_detail_thingsdetail_thingstype"
                            android:src="@drawable/littleicon_uflash" />

                        <TextView
                            android:layout_marginVertical="2dp"
                            android:layout_marginHorizontal="3dp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="20sp"
                            android:text="123456789"
                            android:paddingLeft="30dp"
                            android:layout_below="@+id/thing_detail_thingsdetail_diushidate"
                            android:id="@+id/thing_detail_thingsdetail_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/thing_detail_thingsdetail_describe"
                            android:layout_width="368dp"
                            android:layout_height="wrap_content"
                            android:paddingLeft="30dp"
                            android:textSize="15sp"
                            android:layout_below="@+id/thing_detail_thingsdetail_name"
                            android:layout_marginHorizontal="3dp"
                            android:layout_marginVertical="2dp"
                            android:text="快来添加描述————我想到，人世间的波折其发芽的人，才能在流血之后还能枝繁叶茂的果。" />


                        <!--<HorizontalScrollView-->
                        <!--android:id="@+id/thing_detail_thingsdetail_imgs"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_below="@id/thing_detail_thingsdetail_describe"-->
                        <!--android:overScrollMode="never"-->
                        <!--android:scrollbars="none">-->

                        <!--<LinearLayout-->
                        <!--android:id="@+id/id_horizontallinear_img"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:orientation="horizontal"></LinearLayout>-->
                        <!--</HorizontalScrollView>-->

                    </RelativeLayout>
                </LinearLayout>


            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/thing_detail_usercard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="17dp"
            android:layout_marginHorizontal="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/thing_detail_thingsdetail_circleview"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@mipmap/diai" />

                <TextView
                    android:id="@+id/thing_detail_thingsdetail_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/thing_detail_thingsdetail_circleview"
                    android:layout_marginStart="82dp"
                    android:layout_marginTop="10dp"
                    android:text="我不是桔猫我是橘猫"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/thing_detail_thingsdetail_fabiaodate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/thing_detail_thingsdetail_nickname"
                    android:layout_below="@+id/thing_detail_thingsdetail_nickname"
                    android:text="发布于2018年11月20日" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="留言区"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:textColor="#7879ff"/>

        <android.support.v7.widget.CardView
            android:id="@+id/clicktocomment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="17dp">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/thing_detail_comment_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="240dp">
            </android.support.v7.widget.RecyclerView>
        </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_marginTop="5dp"
        android:background="@drawable/barbackgroud">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="30dp">
            <TextView
                android:id="@+id/comment"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/commit"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="30dp">
            <TextView
                android:id="@+id/tv_return"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/tv_return"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
