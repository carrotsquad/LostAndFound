                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/sp_20"
                            android:text="123456789"
                            android:paddingLeft="@dimen/dp_30"
                            android:layout_below="@+id/thing_detail_thingsdetail_losttype"
                            android:id="@+id/thing_detail_thingsdetail_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/thing_detail_thingsdetail_describe"
                            android:layout_width="@dimen/dp_365"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_15"
                            android:textSize="@dimen/sp_15"
                            android:layout_below="@+id/thing_detail_thingsdetail_name"
                            android:layout_marginHorizontal="@dimen/dp_3"
                            android:layout_marginVertical="@dimen/dp_2"
