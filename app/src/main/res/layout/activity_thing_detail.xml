                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/thing_detail_thingsdetail_circleview"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:src="@mipmap/diai" />

                <TextView
                    android:id="@+id/thing_detail_thingsdetail_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/thing_detail_thingsdetail_circleview"
                    android:layout_marginStart="@dimen/dp_82"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="我不是桔猫我是橘猫"
                    android:textSize="@dimen/dp_20" />

                <TextView
                    android:id="@+id/thing_detail_thingsdetail_fabiaodate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/thing_detail_thingsdetail_nickname"
                    android:layout_below="@+id/thing_detail_thingsdetail_nickname"
                    android:text="发布于2018年11月20日"
                    android:textSize="@dimen/sp_14"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="留言区"
            android:textSize="@dimen/sp_20"
            android:layout_gravity="center"
            android:padding="@dimen/dp_10"
            android:textColor="#7879ff"/>

        <android.support.v7.widget.CardView
            android:id="@+id/clicktocomment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_10"
            app:cardCornerRadius="@dimen/dp_17">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/thing_detail_comment_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_240">
            </android.support.v7.widget.RecyclerView>
