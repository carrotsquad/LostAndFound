<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhangqianyuan.teamwork.lostandfound.view.activity.ThingDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:background="@drawable/barbackgroud"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/thing_detail_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/back"/>

            <TextView
                android:id="@+id/thing_detail_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="失物/招领详情"
                android:textColor="@color/black"
                android:textSize="25sp" />
        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"
            android:layout_height="232dp" >

            <android.support.v4.view.ViewPager
                android:layout_marginTop="8dp"
                android:id="@+id/thing_detail_viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <com.rbrooks.indefinitepagerindicator.IndefinitePagerIndicator
                android:id="@+id/thing_viewpager_pager_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            />


            <!--<include layout="@layout/imageindicatorview_layout"/>-->
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/thing_detail_thingsdetail_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/thing_detail_cardrelative"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp">

                    <RelativeLayout
                        android:id="@+id/lolollol"
                        android:layout_width="match_parent"
                        android:layout_height="137dp">

                        <TextView

                            android:id="@+id/thing_detail_thingsdetail_diushidate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="11dp"
                            android:text="2018年11月19日" />

                        <TextView
                            android:id="@+id/thing_detail_thingsdetail_place"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignTop="@+id/thing_detail_thingsdetail_diushidate"
                            android:layout_marginEnd="31dp"
                            android:text="二教" />

                        <ImageView
                            android:id="@+id/thing_detail_thingsdetail_thingstype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignTop="@+id/thing_detail_thingsdetail_diushidate"
                            android:layout_marginStart="29dp"
                            android:src="@drawable/littleicon_uflash" />

                        <TextView
                            android:id="@+id/thing_detail_thingsdetail_describe"
                            android:layout_width="368dp"
                            android:layout_height="102dp"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/thing_detail_thingsdetail_diushidate"
                            android:layout_marginHorizontal="3dp"
                            android:layout_marginVertical="2dp"
                            android:text="快来添加描述————我想到，人世间的波折其实也和果树一样。有时候我们面临了冬天的肃杀，却还要被减去枝桠，甚至留下了心里的汁液。有那些怯懦的，他就不能等到春天。只有永远保持春天的心情等待发芽的人，才能勇敢的过冬，才能在流血之后还能枝繁叶茂，然后结出比剪枝之前更好的果。" />


                        <!--<HorizontalScrollView-->
                        <!--android:id="@+id/thing_detail_thingsdetail_imgs"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_below="@id/thing_detail_thingsdetail_describe"-->
                        <!--android:overScrollMode="never"-->
                        <!--android:scrollbars="none">-->

                        <!--<LinearLayout-->
                        <!--android:id="@+id/id_horizontallinear_img"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:orientation="horizontal"></LinearLayout>-->
                        <!--</HorizontalScrollView>-->

                    </RelativeLayout>
                </LinearLayout>


            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/thing_detail_thingsdetail_circleview"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@mipmap/diai" />

                <TextView
                    android:id="@+id/thing_detail_thingsdetail_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/thing_detail_thingsdetail_circleview"
                    android:layout_marginStart="82dp"
                    android:layout_marginTop="10dp"
                    android:text="我不是桔猫我是橘猫"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/thing_detail_thingsdetail_fabiaodate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/thing_detail_thingsdetail_nickname"
                    android:layout_below="@+id/thing_detail_thingsdetail_nickname"
                    android:text="发布于2018年11月20日" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/thing_detail_comment_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/thing_detail_comment_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>



</android.support.v4.widget.NestedScrollView>
