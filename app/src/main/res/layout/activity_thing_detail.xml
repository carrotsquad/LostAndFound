                        <TextView
                            android:id="@+id/thing_detail_thingsdetail_losttype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_3"
                            android:layout_alignTop="@+id/thing_detail_thingsdetail_diushidate"
                            android:layout_marginStart="@dimen/dp_16"
                            android:layout_toRightOf="@+id/thing_detail_thingsdetail_thingstype"
