<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/userinfo_item"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/myhistory_thingtype"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp" />

        <ImageView
            android:id="@+id/myhistory_thingtype_txt"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/myhistory_thingtype"
            android:layout_alignParentStart="true"
            android:layout_marginStart="83dp"
           android:layout_marginTop="0dp" />

        <ImageView
            android:id="@+id/myhistory_eventtype"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/myhistory_thingtype_txt"
            android:layout_alignParentStart="true"
            android:layout_marginStart="143dp" />

        <TextView
            android:id="@+id/myhistory_time"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_alignTop="@+id/myhistory_thingtype"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="132dp"
            android:text="8月12号"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/myhistory_time2"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_alignTop="@+id/myhistory_thingtype"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="78dp"
            android:text="16:00"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/myhistory_where"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_alignTop="@+id/myhistory_thingtype"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="31dp"
            android:text="八教"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/isdone_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/myhistory_thingtype_txt"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="6dp"
            android:maxLines="2"
            android:text="递爱成功"
            android:textColor="@color/black"
            android:textSize="23sp" />
    </RelativeLayout>
</RelativeLayout>
