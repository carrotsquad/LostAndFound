<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relatelayout"
    android:background="@drawable/shape_item"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/userinfo_item"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/myhistory_thingtype"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp" />

        <ImageView
            android:id="@+id/myhistory_thingtype_txt"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:layout_alignTop="@id/myhistory_thingtype"
            android:layout_toRightOf="@+id/myhistory_thingtype"
            android:layout_marginStart="15dp"
           android:layout_marginTop="0dp" />

        <ImageView
            android:id="@+id/myhistory_eventtype"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:layout_alignTop="@id/myhistory_thingtype_txt"
            android:layout_toRightOf="@+id/myhistory_thingtype_txt"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/myhistory_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8月12号"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/myhistory_time2"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_alignTop="@id/myhistory_thingtype"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="90dp"
            android:text="16:00"
            android:textSize="13sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/myhistory_where"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_alignTop="@id/myhistory_thingtype"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="25dp"
            android:text="八教"
            android:textSize="13sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/isdone_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/myhistory_thingtype"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="6dp"
            android:maxLines="2"
            android:text="递爱成功"
            android:textColor="@color/black"
            android:textSize="23sp" />
    </RelativeLayout>
</RelativeLayout>
