<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relatelayout"
    android:background="@drawable/shape_item"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/userinfo_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/myhistory_thingtype"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_70"
            android:scaleType="fitXY"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_20" />

<!--        <ImageView-->
<!--            android:id="@+id/myhistory_thingtype_txt"-->
<!--            android:layout_width="40dp"-->
<!--            android:layout_height="@dimen/dp_20"-->
<!--            android:scaleType="fitXY"-->
<!--            android:layout_alignTop="@id/myhistory_thingtype"-->
<!--            android:layout_toRightOf="@+id/myhistory_thingtype"-->
<!--            android:layout_marginStart="@dimen/dp_15"-->
<!--           android:layout_marginTop="0dp" />-->

        <TextView
            android:id="@+id/myhistory_thingtype_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/myhistory_thingtype"
            android:layout_toRightOf="@+id/myhistory_thingtype"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="0dp"
            android:padding="@dimen/dp_3"
            android:text=" 电脑 "
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/shape_type"/>

<!--        <ImageView-->
<!--            android:id="@+id/myhistory_eventtype"-->
<!--            android:layout_width="@dimen/dp_20"-->
<!--            android:layout_height="@dimen/dp_20"-->
<!--            android:scaleType="fitXY"-->
<!--            android:layout_alignTop="@id/myhistory_thingtype_txt"-->
<!--            android:layout_toRightOf="@+id/myhistory_thingtype_txt"-->
<!--            android:layout_marginStart="@dimen/dp_10" />-->

        <TextView
            android:id="@+id/myhistory_eventtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/myhistory_thingtype_txt"
            android:layout_toRightOf="@+id/myhistory_thingtype_txt"
            android:layout_marginStart="@dimen/dp_10"
            android:text=" 丢 "
            android:padding="@dimen/dp_3"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/shape_thingstype_find"
            android:layout_marginLeft="@dimen/dp_10"/>

        <TextView
            android:id="@+id/myhistory_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8月12号"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/black"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/dp_20"/>

        <TextView
            android:id="@+id/myhistory_time2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_16"
            android:layout_alignTop="@id/myhistory_thingtype"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_90"
            android:text="16:00"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/myhistory_where"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_16"
            android:layout_alignTop="@id/myhistory_thingtype"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_25"
            android:text="八教"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/isdone_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/myhistory_thingtype"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_6"
            android:maxLines="2"
            android:text="递爱成功"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_23" />
    </RelativeLayout>
</RelativeLayout>
