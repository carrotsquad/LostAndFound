<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/userinfo_myhistory_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        app:cardCornerRadius="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/userinfo_myhistory_typeimg"
                android:layout_alignParentStart="true"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"/>

            <ImageView
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/userinfo_myhistory_typeimg"
                android:id="@+id/userinfo_myhistory_typetext"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView

                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@id/userinfo_myhistory_typetext"
                android:id="@+id/userinfo_myhistory_isdone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:paddingStart="50dp"
                android:paddingEnd="50dp"
                android:textColor="@color/black"
                android:text="递爱成功!"
                android:maxLines="1"
                android:ems="10"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
