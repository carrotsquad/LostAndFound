<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f4f4f4"
    tools:context="com.yf107.teamwork.lostandfound.view.activity.GivebackActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <Button
            android:id="@+id/giveback_back"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_20"
            android:background="@drawable/zijiantou"/>


    <TextView
        android:id="@+id/guihuan_zhaoling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="我要归还"
        android:textSize="@dimen/sp_34"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"/>
    </android.support.v7.widget.Toolbar>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/dp_10">


        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/dp_220"
            android:layout_height="@dimen/dp_220"
            android:src="@drawable/thanks"
            android:padding="@dimen/dp_10"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/tishi1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您好"
            android:padding="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="#000000"
            android:layout_below="@id/image"
            android:layout_marginTop="@dimen/dp_12"
            android:textSize="@dimen/sp_18"/>
        <TextView
            android:id="@+id/tishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:padding="@dimen/dp_12"
            android:text="    为确保您确实是失物的主人，递爱要对您做信息的录入，且方便失物者联系你"
           android:textColor="#000000"
            android:layout_below="@id/tishi1"
            android:textSize="@dimen/sp_18"/>
<!--            android:layout_marginTop="@dimen/dp_10"-->


    <EditText
        android:id="@+id/qq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tishi"
        android:layout_marginTop="@dimen/dp_10"
        android:hint="  填写QQ"
        android:textSize="@dimen/sp_16"/>

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/qq"
        android:layout_marginTop="@dimen/dp_10"
        android:hint="  填写手机"
        android:textSize="@dimen/sp_16"/>

        <TextView
            android:id="@+id/warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*请您提供至少一种联系方式"
            android:textSize="@dimen/dp_10"
            android:layout_below="@+id/phone"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="#ff0000"/>

    <Button
        android:id="@+id/gb_sure"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/sure_back"
        android:layout_below="@+id/phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_37"
        style="@style/Widget.AppCompat.Button.Borderless"/>

    </RelativeLayout>
</LinearLayout>
