<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f4f4f4"
    tools:context="com.yf107.teamwork.lostandfound.view.activity.GivebackActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <Button
            android:id="@+id/giveback_back"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:background="@drawable/zijiantou"/>
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/guihuan_zhaoling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我要归还"
        android:textSize="40sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_marginTop="10dp">


        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/thanks"
            android:padding="10dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/tishi1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您好"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:layout_below="@id/image"
            android:layout_marginTop="20dp"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="    为确保您确实是失物的主人，递爱要对您做信息的录入，且方便什物者联系你"
           android:textColor="#000000"
            android:layout_below="@id/tishi1"
            android:layout_marginTop="10dp"
            android:textSize="20sp"/>

    <EditText
        android:id="@+id/qq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tishi"
        android:layout_marginTop="20dp"
        android:hint="  填写QQ"/>
    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/qq"
        android:layout_marginTop="20dp"
        android:hint="  填写手机"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*请您提供至少一种联系方式"
            android:layout_below="@+id/phone"
            android:layout_marginLeft="10dp"
            android:textColor="#ff0000"/>

    <Button
        android:id="@+id/gb_sure"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:background="@drawable/sure_back"
        android:layout_below="@+id/phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        style="@style/Widget.AppCompat.Button.Borderless"/>

    </RelativeLayout>
</LinearLayout>
