<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="7dp"
    android:layout_marginVertical="2dp"
    android:id="@+id/search_item_cardview"
    app:cardCornerRadius="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/search_item_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:src="@mipmap/diai" />

        <RelativeLayout
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/search_item_title"
            android:layout_marginStart="111dp"
            android:layout_toEndOf="@id/search_item_photo">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物品类型:U盘" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="12dp"
                android:src="@drawable/uflass" />
        </RelativeLayout>


        <TextView
            android:layout_toEndOf="@id/search_item_photo"
            android:id="@+id/search_item_title"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:maxLines="1"
            android:singleLine="false"
            android:text="我的钥匙掉在昨晚掉在2014了你们能帮我一下么" />

        <TextView
            android:id="@+id/search_item_fabiaodate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/search_item_placeanddate"
            android:layout_marginVertical="2dp"
            android:layout_toEndOf="@+id/search_item_photo"
            android:text="发布时间:2018年10月5日" />

        <TextView
            android:id="@+id/search_item_placeanddate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/search_item_photo"
            android:layout_alignStart="@+id/search_item_title"
            android:layout_marginVertical="0dp"
            android:text="丢失地点:四教  丢失时间:今天10:10" />

        <TextView
            android:id="@+id/search_item_qishileixing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/search_item_title"
            android:layout_centerVertical="true"
            android:layout_marginVertical="2dp"
            android:text="启事类型:失物启事" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/search_item_newmessage"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:background="@color/white" />
    </RelativeLayout>


</android.support.v7.widget.CardView>