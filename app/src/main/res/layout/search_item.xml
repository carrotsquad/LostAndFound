<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/search_item_relativeview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        >

        <RelativeLayout
            android:id="@+id/search_item_relate1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/search_item_thingsphoto"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                android:src="@mipmap/diai" />


            <ImageView
                android:id="@+id/search_item_thingstype"
                android:layout_width="30dp"
                android:layout_height="16dp"
                android:layout_marginTop="18dp"
                android:layout_toRightOf="@id/search_item_thingsphoto"
                android:src="@drawable/littleicon_uflash" />


            <ImageView
                android:id="@+id/search_item_qishileixing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/search_item_thingstype"
                android:layout_marginLeft="7dp"
                android:layout_toEndOf="@+id/search_item_userphoto"
                android:src="@drawable/littleicon_type_lost" />


            <ImageView
                android:id="@+id/search_item_isNeedBounty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="18dp"
                android:layout_toRightOf="@id/search_item_qishileixing"
                android:src="@drawable/littleicon_bounty" />

            <TextView
                android:id="@+id/search_item_placeanddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/search_item_thingstype"
                android:layout_marginRight="-10dp"
                android:layout_toStartOf="@+id/search_item_newmessage"
                android:text="四教   今天10:10"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/search_item_title"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/search_item_thingstype"
                android:layout_alignParentTop="true"
                android:layout_marginTop="45dp"
                android:maxLines="2"
                android:singleLine="false"
                android:text="我的钥匙掉在昨晚掉在2014了你们能帮我一下么"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/search_item_newmessage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_red"
                android:gravity="center"
                android:text="+1"
                android:textColor="@color/white" />


            <LinearLayout
                android:id="@+id/search_item_div"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_above="@id/search_item_userphoto"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="3dp"
                android:layout_toRightOf="@id/search_item_thingsphoto"
                android:background="@color/grey_300"
                android:orientation="horizontal" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/search_item_userphoto"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignEnd="@+id/search_item_thingstype"

                android:layout_alignBottom="@+id/search_item_thingsphoto"
                android:src="@mipmap/diai" />

            <TextView
                android:id="@+id/search_item_userNickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/search_item_fabiaodate"
                android:layout_alignStart="@+id/search_item_qishileixing"
                android:text="heator"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/search_item_fabiaodate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/search_item_thingsphoto"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="1dp"
                android:text="2018年10月5日发布"
                android:textSize="7sp" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/search_item_linear"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/search_item_relate1"
            android:background="@color/grey_300"
            android:orientation="horizontal">

        </LinearLayout>


    </RelativeLayout>
    <Button
        android:id="@+id/search_item_delete"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:text="删除"
        android:layout_marginBottom="2dp"
        android:textSize="18sp"
        android:background="@color/pink_400"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/search_item_finish"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:text="递爱成功"
        android:layout_marginBottom="2dp"
        android:textSize="18sp"
        android:background="@color/babyblue"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/search_item_edit"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:text="编辑"
        android:layout_marginBottom="2dp"
        android:textSize="18sp"
        android:background="@color/black"
        android:textColor="@color/white" />

</com.mcxtzhang.swipemenulib.SwipeMenuLayout>