    <RelativeLayout
        android:id="@+id/cardView"
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_27"
        android:layout_marginRight="@dimen/dp_27"
        android:layout_marginBottom="@dimen/dp_28"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4">


        <EditText
            android:id="@+id/signin_username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="23dp"
            android:layout_marginRight="@dimen/dp_50"
            android:drawablePadding="@dimen/dp_10"
            android:hint="学号"
            android:textColorHint="#d3d3d3"
            android:inputType="number"
            android:maxLength="10"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="18sp" />
<!--            android:drawableStart="@drawable/ic_people"/>-->


        <EditText
            android:id="@+id/signin_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="110dp"
            android:layout_marginRight="@dimen/dp_50"
            android:drawablePadding="@dimen/dp_10"
            android:hint="输入密码"
            android:textCursorDrawable="@null"
            android:textColorHint="#d3d3d3"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/wrong1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signin_pwd"
            android:layout_alignLeft="@+id/signin_pwd"
            android:textSize="14sp"
            android:textColor="#ff0000" />

        <Button
            android:id="@+id/all_clear"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_alignTop="@+id/signin_pwd"
            android:layout_alignEnd="@+id/signin_pwd"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginEnd="-16dp"
            android:background="@drawable/all_clear" />

    </RelativeLayout>

