<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:background="#ffffff"
    android:layout_marginTop="@dimen/dp_10">
    <RelativeLayout
        android:id="@+id/upload_item_relativeview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/userinfo_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp">

            <ImageView
            android:id="@+id/myupload_thingtype"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_70"
                android:scaleType="fitXY"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_20"
             android:src="@mipmap/ic_launcher"/>

<!--            <ImageView-->
<!--            android:id="@+id/myupload_thingtype_txt"-->
<!--            android:layout_width="40dp"-->
<!--            android:layout_height="@dimen/dp_20"-->
<!--           android:layout_toRightOf="@+id/myupload_thingtype"-->
<!--            android:layout_marginTop="@dimen/dp_15"-->
<!--                android:layout_marginLeft="@dimen/dp_20"-->
<!--                android:src="@mipmap/ic_launcher"-->
<!--                android:scaleType="fitXY"/>-->

            <TextView
                android:id="@+id/myupload_thingtype_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/myupload_thingtype"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_18"
                android:padding="@dimen/dp_3"
                android:text=" 电脑 "
                android:textSize="@dimen/sp_12"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/shape_type"/>

<!--            <ImageView-->
<!--            android:id="@+id/myupload_eventtype"-->
<!--            android:layout_width="@dimen/dp_20"-->
<!--            android:layout_height="@dimen/dp_20"-->
<!--            android:layout_marginTop="@dimen/dp_15"-->
<!--            android:layout_toRightOf="@id/myupload_thingtype_txt"-->
<!--           android:src="@mipmap/ic_launcher"-->
<!--            android:layout_marginLeft="@dimen/dp_10"/>-->

            <TextView
                android:id="@+id/myupload_eventtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_toLeftOf="@id/myupload_where"
                android:text=" 丢 "
                android:textSize="@dimen/sp_12"
                android:padding="@dimen/dp_3"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/shape_thingstype_find"
                android:layout_marginRight="@dimen/dp_12"/>

            <android.support.v7.widget.AppCompatTextView
            android:id="@+id/myupload_where"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_25"
            android:layout_alignTop="@id/myupload_thingtype"
            android:layout_marginTop="@dimen/dp__1"
            android:text="二教"
                android:gravity="center"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black"
                android:layout_toLeftOf="@+id/myupload_time"
                android:layout_marginRight="@dimen/dp_9"
                app:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="14sp"
                app:autoSizeMinTextSize="9sp"
                app:autoSizeStepGranularity="1sp"/>

            <TextView
            android:id="@+id/myupload_time2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_16"
            android:layout_alignTop="@id/myupload_thingtype"
            android:layout_alignParentEnd="true"
                android:textSize="@dimen/sp_12"
            android:textColor="@color/black" />

            <TextView
            android:id="@+id/myupload_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/myupload_thingtype"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_24"
            android:text="2019.10.24" 
                android:textSize="@dimen/sp_12" />

        </RelativeLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/upload_item_edit"
        android:layout_width="@dimen/dp_90"
        android:layout_height="match_parent"
        android:text="编辑"
        android:layout_marginBottom="@dimen/dp_2"
        android:textSize="@dimen/sp_18"
        android:background="#999999"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/upload_item_delete"
        android:layout_width="@dimen/dp_90"
        android:layout_height="match_parent"
        android:text="删除"
        android:layout_marginBottom="@dimen/dp_2"
        android:textSize="@dimen/sp_18"
        android:background="#feb31a"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/upload_item_finish"
        android:layout_width="@dimen/dp_120"
        android:layout_height="match_parent"
        android:text="递爱成功"
        android:layout_marginBottom="@dimen/dp_2"
        android:textSize="@dimen/sp_18"
        android:background="#eb5846"
        android:textColor="@color/white" />
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>
