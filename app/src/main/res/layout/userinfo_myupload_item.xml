<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true">
    <RelativeLayout
        android:id="@+id/upload_item_relativeview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/userinfo_item"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp">

            <ImageView
            android:id="@+id/myupload_thingtype"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp" />

            <ImageView
            android:id="@+id/myupload_thingtype_txt"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_alignTop="@id/myupload_thingtype"
            android:layout_alignParentStart="true"
            android:layout_marginStart="83dp"
            android:layout_marginTop="0dp" />

            <ImageView
            android:id="@+id/myupload_eventtype"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@id/myupload_thingtype_txt"
            android:layout_alignParentStart="true"
            android:layout_marginStart="133dp" />

            <TextView
            android:id="@+id/myupload_time"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_alignTop="@id/myupload_thingtype"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="135dp"
            android:text="8月12号"
            android:textColor="@color/black" />

            <TextView
            android:id="@+id/myupload_time2"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_alignTop="@id/myupload_thingtype"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="90dp"
            android:text="16:00"
            android:textColor="@color/black" />

            <TextView
            android:id="@+id/myupload_where"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_alignTop="@id/myupload_thingtype"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:text="八教"
            android:textColor="@color/black" />

        </RelativeLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/upload_item_delete"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:text="删除"
        android:layout_marginBottom="2dp"
        android:textSize="18sp"
        android:background="@color/pink_400"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/upload_item_finish"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:text="递爱成功"
        android:layout_marginBottom="2dp"
        android:textSize="18sp"
        android:background="@color/babyblue"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/upload_item_edit"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:text="编辑"
        android:layout_marginBottom="2dp"
        android:textSize="18sp"
        android:background="@color/black"
        android:textColor="@color/white" />
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>
