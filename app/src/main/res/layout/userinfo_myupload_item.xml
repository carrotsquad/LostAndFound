<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:background="#ffffff"
    android:layout_marginTop="10dp">
    <RelativeLayout
        android:id="@+id/upload_item_relativeview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/userinfo_item"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp">

            <ImageView
            android:id="@+id/myupload_thingtype"
            android:layout_width="90dp"
            android:layout_height="70dp"
                android:scaleType="fitXY"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
             android:src="@mipmap/ic_launcher"/>

<!--            <ImageView-->
<!--            android:id="@+id/myupload_thingtype_txt"-->
<!--            android:layout_width="40dp"-->
<!--            android:layout_height="20dp"-->
<!--           android:layout_toRightOf="@+id/myupload_thingtype"-->
<!--            android:layout_marginTop="15dp"-->
<!--                android:layout_marginLeft="20dp"-->
<!--                android:src="@mipmap/ic_launcher"-->
<!--                android:scaleType="fitXY"/>-->

            <TextView
                android:id="@+id/myupload_thingtype_txt"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_toRightOf="@+id/myupload_thingtype"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:padding="3dp"
                android:text=" 电脑 "
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/shape_type"/>

<!--            <ImageView-->
<!--            android:id="@+id/myupload_eventtype"-->
<!--            android:layout_width="20dp"-->
<!--            android:layout_height="20dp"-->
<!--            android:layout_marginTop="15dp"-->
<!--            android:layout_toRightOf="@id/myupload_thingtype_txt"-->
<!--           android:src="@mipmap/ic_launcher"-->
<!--            android:layout_marginLeft="10dp"/>-->

            <TextView
                android:id="@+id/myupload_eventtype"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/myupload_thingtype_txt"
                android:text=" 丢 "
                android:padding="3dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/shape_thingstype_find"
                android:layout_marginLeft="10dp"/>

            <TextView
            android:id="@+id/myupload_where"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/myupload_thingtype"
            android:layout_marginTop="-1dp"
            android:text="二教"
                android:textSize="17sp"
            android:textColor="@color/black"
             android:layout_toLeftOf="@+id/myupload_time"
                android:layout_marginRight="20dp"/>

            <TextView
            android:id="@+id/myupload_time2"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_alignTop="@id/myupload_thingtype"
            android:layout_alignParentEnd="true"
                android:textSize="12sp"
            android:textColor="@color/black" />

            <TextView
            android:id="@+id/myupload_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/myupload_thingtype"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:text="2019.10.24"
                android:textSize="12sp" />

        </RelativeLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/upload_item_edit"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:text="编辑"
        android:layout_marginBottom="2dp"
        android:textSize="18sp"
        android:background="#999999"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/upload_item_delete"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:text="删除"
        android:layout_marginBottom="2dp"
        android:textSize="18sp"
        android:background="#feb31a"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/upload_item_finish"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:text="递爱成功"
        android:layout_marginBottom="2dp"
        android:textSize="18sp"
        android:background="#eb5846"
        android:textColor="@color/white" />
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>
