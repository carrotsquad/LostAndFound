<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhangqianyuan.teamwork.lostandfound.view.activity.ChangeNickNameActivity">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/setting_bar"
        android:background="@drawable/barbackgroud"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:text="修改昵称"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_below="@id/setting_bar"
        android:id="@+id/edit_nicklayout"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/edit_nicklayout_nick"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="修改昵称"
            android:layout_width="80dp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/edit_nicklayout_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@id/edit_nicklayout_nick"
            android:gravity="center_vertical"
            android:ems="10"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:clickable="true"
        app:cardCornerRadius="4dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

    <Button
        android:id="@+id/edit_nickname_ok"
        android:background="@drawable/barbackgroud"
        android:text="完成"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>
</RelativeLayout>
