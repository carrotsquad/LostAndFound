<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_3"
    app:cardCornerRadius="@dimen/dp_4"
    android:id="@+id/dynamic_card"
    app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/dynamic_card_thingsphoto"
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_140"
            android:layout_centerHorizontal="true"/>

        <RelativeLayout
            android:id="@+id/dynamic_card_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dynamic_card_thingsphoto"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="horizontal">

<!--            <ImageView-->
<!--                android:id="@+id/dynamic_card_thingtype"-->
<!--                android:layout_width="40dp"-->
<!--                android:layout_height="@dimen/dp_20"-->
<!--                android:layout_marginLeft="0dp"-->
<!--                android:layout_marginTop="@dimen/dp_10"-->
<!--                android:src="@drawable/littleicon_uflash" />-->

            <TextView
                android:id="@+id/dynamic_card_thingtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:padding="@dimen/dp_3"
                android:text="电脑"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/shape_type"/>

<!--            <ImageView-->
<!--                android:id="@+id/dynamic_card_qishileixin"-->
<!--                android:layout_width="@dimen/dp_20"-->
<!--                android:layout_height="@dimen/dp_20"-->
<!--                android:layout_marginLeft="@dimen/dp_5"-->
<!--                android:layout_marginTop="@dimen/dp_10"-->
<!--                android:layout_toRightOf="@id/dynamic_card_thingtype"-->
<!--                android:src="@drawable/littleicon_type_lost" />-->

            <TextView
                android:id="@+id/dynamic_card_qishileixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toRightOf="@id/dynamic_card_thingtype"
                android:scaleType="fitXY"
                android:text="丢"
                android:padding="@dimen/dp_3"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/shape_thingstype_find"/>

            <TextView
                android:id="@+id/dynamic_card_dateandplace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:text="四教"
                android:textColor="#000000"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dynamic_card_headimg"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_below="@+id/dynamic_card_title"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_3"
            android:layout_marginBottom="@dimen/dp_3"
            android:src="@mipmap/diai" />

        <TextView
            android:id="@+id/dynamic_card_neckname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dynamic_card_title"
            android:layout_alignParentBottom="false"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_toRightOf="@+id/dynamic_card_headimg"

            android:text="heator"
            android:textColor="#111"
            android:textSize="@dimen/sp_14" />


        <!--<TextView-->
        <!--android:id="@+id/dynamic_card_time"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_alignTop="@+id/dynamic_card_thingtype"-->
        <!--android:layout_marginStart="113dp"-->
        <!--android:maxLines="2"-->
        <!--android:text="今天10:10"-->
        <!--android:textColor="#111"-->
        <!--android:textSize="14sp" />-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/dynamic_card_title"
            android:layout_marginTop="@dimen/dp_3"
            android:background="#c4e1ff"/>


        <TextView
            android:id="@+id/dynamic_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dynamic_card_linear"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_3"
            android:maxEms="10"
            android:maxLines="1"
            android:singleLine="false"
            android:text="我的钥匙掉在昨晚掉在2014了你们能帮我一下么"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/dynamic_card_publishdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dynamic_card_neckname"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_8"
            android:text="2018年10月5日发布"
            android:textSize="@dimen/sp_10" />

    </RelativeLayout>

</android.support.v7.widget.CardView>