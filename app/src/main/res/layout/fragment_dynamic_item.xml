<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardCornerRadius="4dp"
    android:id="@+id/dynamic_card"
    app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/dynamic_card_thingsphoto"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <RelativeLayout
            android:id="@+id/dynamic_card_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dynamic_card_thingsphoto"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

<!--            <ImageView-->
<!--                android:id="@+id/dynamic_card_thingtype"-->
<!--                android:layout_width="40dp"-->
<!--                android:layout_height="20dp"-->
<!--                android:layout_marginLeft="0dp"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:src="@drawable/littleicon_uflash" />-->

            <TextView
                android:id="@+id/dynamic_card_thingtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:padding="3dp"
                android:text="电脑"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/shape_type"/>

<!--            <ImageView-->
<!--                android:id="@+id/dynamic_card_qishileixin"-->
<!--                android:layout_width="20dp"-->
<!--                android:layout_height="20dp"-->
<!--                android:layout_marginLeft="5dp"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_toRightOf="@id/dynamic_card_thingtype"-->
<!--                android:src="@drawable/littleicon_type_lost" />-->

            <TextView
                android:id="@+id/dynamic_card_qishileixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/dynamic_card_thingtype"
                android:scaleType="fitXY"
                android:text="丢"
                android:padding="3dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/shape_thingstype_find"/>

            <TextView
                android:id="@+id/dynamic_card_dateandplace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:text="四教"
                android:textColor="#000000"
                android:textSize="14sp" />

        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dynamic_card_headimg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/dynamic_card_title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:src="@mipmap/diai" />

        <TextView
            android:id="@+id/dynamic_card_neckname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dynamic_card_title"
            android:layout_alignParentBottom="false"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/dynamic_card_headimg"

            android:text="heator"
            android:textColor="#111"
            android:textSize="14sp" />


        <!--<TextView-->
        <!--android:id="@+id/dynamic_card_time"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_alignTop="@+id/dynamic_card_thingtype"-->
        <!--android:layout_marginStart="113dp"-->
        <!--android:maxLines="2"-->
        <!--android:text="今天10:10"-->
        <!--android:textColor="#111"-->
        <!--android:textSize="14sp" />-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/dynamic_card_title"
            android:layout_marginTop="3dp"
            android:background="#c4e1ff"/>


        <TextView
            android:id="@+id/dynamic_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dynamic_card_linear"
            android:layout_marginStart="15dp"
            android:layout_marginTop="3dp"
            android:maxEms="10"
            android:maxLines="1"
            android:singleLine="false"
            android:text="我的钥匙掉在昨晚掉在2014了你们能帮我一下么"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dynamic_card_publishdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dynamic_card_neckname"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:text="2018年10月5日发布"
            android:textSize="10sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>