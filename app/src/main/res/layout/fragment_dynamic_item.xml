<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardCornerRadius="4dp"
    android:id="@+id/dynamic_card"
    app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp">

        <ImageView
            android:id="@+id/dynamic_card_thingsphoto"
            android:layout_width="match_parent"
            android:layout_height="150dp" />

        <ImageView
            android:id="@+id/dynamic_card_thingtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/littleicon_uflash"
            android:layout_below="@+id/dynamic_card_thingsphoto"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dynamic_card_headimg"
            android:layout_marginTop="50dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/dynamic_card_thingsphoto"
            android:layout_alignStart="@+id/dynamic_card_time"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/dynamic_card_neckname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="35dp"
            android:layout_marginStart="88dp"
            android:text="heator"
            android:textColor="#fff"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/dynamic_card_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dynamic_card_thingtype"
            android:layout_marginStart="15dp"
            android:layout_marginTop="3dp"
            android:maxLines="2"
            android:textColor="#fff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dynamic_card_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dynamic_card_time"
            android:layout_marginStart="15dp"
            android:layout_marginTop="3dp"
            android:maxLines="2"
            android:textColor="#fff"
            android:textSize="14sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>