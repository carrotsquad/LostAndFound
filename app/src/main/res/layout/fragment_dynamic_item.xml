<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    android:id="@+id/dynamic_card"
    app:cardBackgroundColor="@color/colorPrimary">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dynamic_card_headimg"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/gril6"/>
        <TextView
            android:layout_margin="10dp"
            android:id="@+id/dynamic_card_neckname"
            android:layout_toEndOf="@id/dynamic_card_headimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/neckname"
            android:textColor="#fff"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/dynamic_card_thingtype"
            android:layout_below="@id/dynamic_card_headimg"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textview"
            android:textSize="18sp"
            android:textColor="#fff"
            android:maxLines="2"
            />
        <TextView
            android:id="@+id/dynamic_card_time"
            android:layout_below="@id/dynamic_card_thingtype"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textview"
            android:textSize="18sp"
            android:textColor="#fff"
            android:maxLines="2"/>
        <TextView
            android:id="@+id/dynamic_card_description"
            android:layout_below="@id/dynamic_card_time"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textview"
            android:textSize="18sp"
            android:textColor="#fff"
            android:maxLines="2"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>