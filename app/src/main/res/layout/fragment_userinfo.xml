<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:background="@drawable/userinfo_background"
        android:id="@+id/userinfo_headlayout"
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userinfo_head_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:src="@mipmap/diai" />

        <TextView
            android:id="@+id/userinfo_head_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="我是只橘猫"
            android:textColor="@color/black"
            android:textSize="24dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/userinfo_biglayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="238dp">

     <RelativeLayout
         android:id="@+id/userinfo_myupload_layout"
         android:layout_width="match_parent"
         android:layout_height="50dp">

         <ImageView
             android:id="@+id/userinfo_myupload_layout_img"
             android:layout_centerVertical="true"
             android:layout_marginStart="20dp"
             android:src="@drawable/myupload"
             android:layout_width="30dp"
             android:layout_height="40dp" />
         <TextView
             android:layout_marginStart="20dp"
             android:gravity="center_vertical"
             android:layout_toEndOf="@+id/userinfo_myupload_layout_img"
             android:textColor="@color/black"
             android:textSize="15dp"
             android:text="我的发布"
             android:layout_width="wrap_content"
             android:layout_height="match_parent" />
         <View
             android:layout_alignParentBottom="true"
             android:layout_width="match_parent"
             android:layout_height="1dp"/>
     </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/userinfo_myupload_layout"
            android:id="@+id/userinfo_myhistory_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/userinfo_myhistory_layout_img"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:src="@drawable/myhistory"
                android:layout_width="30dp"
                android:layout_height="40dp" />
            <TextView
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:layout_toEndOf="@+id/userinfo_myhistory_layout_img"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="我的历史"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/userinfo_myhistory_layout"
            android:id="@+id/userinfo_aboutus_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/userinfo_aboutus_layout_img"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:src="@drawable/aboutus"
                android:layout_width="30dp"
                android:layout_height="40dp" />
            <TextView
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:layout_toEndOf="@+id/userinfo_aboutus_layout_img"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="关于我们"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_below="@id/userinfo_biglayout1"
        android:id="@+id/userinfo_biglayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/userinfo_setting_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/userinfo_setting_layout_img"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:src="@drawable/setting"
                android:layout_width="30dp"
                android:layout_height="40dp" />
            <TextView
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:layout_toEndOf="@+id/userinfo_setting_layout_img"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="设置"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>