<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/userinfo_headlayout"
        android:background="@drawable/userinfo_backgroud"
        android:layout_width="match_parent"
        android:layout_height="210dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userinfo_head_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"
            android:src="@mipmap/user" />

        <TextView
            android:id="@+id/userinfo_head_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="我是一个真用户"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout

        android:id="@+id/userinfo_biglayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/userinfo_headlayout">

        <RelativeLayout
            android:id="@+id/userinfo_myupload_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/userinfo_myupload_layout_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:background="@drawable/myupload" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/userinfo_myupload_layout_img"
                android:gravity="center_vertical"
                android:text="   我的发布"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:background="@color/white"/>

            <TextView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="50dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/userinfo_myhistory_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/userinfo_myupload_layout"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/userinfo_myhistory_layout_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:background="@drawable/myhistory" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="30dp"
                android:layout_toEndOf="@+id/userinfo_myhistory_layout_img"
                android:gravity="center_vertical"
                android:text="   我的历史"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:background="@color/white"/>

            <TextView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="50dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/userinfo_feedback_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/userinfo_myhistory_layout"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/userinfo_feedback_layout_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:background="@drawable/feedback" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/userinfo_feedback_layout_img"
                android:gravity="center_vertical"
                android:text="   反馈"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:background="@color/white"/>

            <TextView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="50dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/userinfo_aboutus_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/userinfo_feedback_layout"
            android:background="@color/white">

            <ImageView
                android:id="@+id/userinfo_aboutus_layout_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:background="@drawable/aboutus" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="30dp"
                android:layout_toEndOf="@+id/userinfo_aboutus_layout_img"
                android:gravity="center_vertical"
                android:text="   关于我们"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:background="@color/white"/>

            <TextView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="50dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/userinfo_setting_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/userinfo_aboutus_layout"
            android:background="@color/white">

            <ImageView
                android:id="@+id/userinfo_setting_layout_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:background="@drawable/setting" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="30dp"
                android:layout_toEndOf="@+id/userinfo_setting_layout_img"
                android:gravity="center_vertical"
                android:text="   设置"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:background="@color/white" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="50dp"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>