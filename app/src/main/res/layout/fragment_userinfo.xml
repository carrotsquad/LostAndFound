<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/userinfo_headlayout"
        android:background="@drawable/userinfo_backgroud"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_190">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userinfo_head_img"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_48"
            android:src="@mipmap/user" />

        <TextView
            android:id="@+id/userinfo_head_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_14"
            android:gravity="center"
            android:text="我是一个真用户"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

    <RelativeLayout

        android:id="@+id/userinfo_biglayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/userinfo_headlayout">

        <RelativeLayout
            android:id="@+id/userinfo_myupload_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_65"
            android:background="@color/white">

            <ImageView
                android:id="@+id/userinfo_myupload_layout_img"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_50"
                android:background="@drawable/myload1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_30"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_toEndOf="@+id/userinfo_myupload_layout_img"
                android:gravity="center_vertical"
                android:text="   我的发布"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16"
                android:background="@color/white"/>

            <TextView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_50" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/userinfo_myhistory_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_65"
            android:layout_below="@id/userinfo_myupload_layout"
            android:layout_marginTop="@dimen/dp_9"
            android:background="@color/white">

            <ImageView
                android:id="@+id/userinfo_myhistory_layout_img"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_50"
                android:background="@drawable/myhistory1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_30"
                android:layout_toEndOf="@+id/userinfo_myhistory_layout_img"
                android:gravity="center_vertical"
                android:text="   我的历史"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                android:background="@color/white"/>

            <TextView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_50" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/userinfo_feedback_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_65"
            android:layout_below="@id/userinfo_myhistory_layout"
            android:layout_marginTop="@dimen/dp_9"
            android:background="@color/white">

            <ImageView
                android:id="@+id/userinfo_feedback_layout_img"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_50"
                android:background="@drawable/feedback1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_30"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_toEndOf="@+id/userinfo_feedback_layout_img"
                android:gravity="center_vertical"
                android:text="   反馈"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                android:background="@color/white"/>

            <TextView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_50" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/userinfo_aboutus_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_65"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_below="@id/userinfo_feedback_layout"
            android:background="@color/white">


            <ImageView
                android:id="@+id/userinfo_aboutus_layout_img"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_50"
                android:background="@drawable/aboutus1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_30"
                android:layout_toEndOf="@+id/userinfo_aboutus_layout_img"
                android:gravity="center_vertical"
                android:text="   关于我们"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                android:background="@color/white"/>

            <TextView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_50" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/userinfo_setting_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_65"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_below="@id/userinfo_aboutus_layout"
            android:background="@color/white">

            <ImageView
                android:id="@+id/userinfo_setting_layout_img"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_50"
                android:background="@drawable/setting1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_30"
                android:layout_toEndOf="@+id/userinfo_setting_layout_img"
                android:gravity="center_vertical"
                android:text="   设置"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                android:background="@color/white" />

            <TextView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_50"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>