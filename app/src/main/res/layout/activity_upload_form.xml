<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context="com.zhangqianyuan.teamwork.lostandfound.view.activity.UploadFormActivity">

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/upload_lostorfind_title"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="失物表单"
        android:textSize="30sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/upload_lostorfind_time"
        android:layout_marginTop="40dp"
        android:layout_below="@id/upload_lostorfind_title"
        android:layout_centerHorizontal="true"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:ems="12"
        android:inputType="datetime"
        android:drawableStart="@drawable/ic_time"
        android:hint="请输入丢失时间"
        />
    <EditText
        android:id="@+id/upload_lostorfind_where"
        android:layout_below="@+id/upload_lostorfind_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_where"
        android:ems="12"
        android:hint="请输入丢失地点"
        />
    <android.support.v7.widget.CardView
        android:id="@+id/upload_lostorfind_description"
        android:layout_below="@id/upload_lostorfind_where"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/upload_lostorfind_description_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="4"
                android:gravity="top"
                android:hint="请输入对此事件的描述"
                />

            <ImageView
                android:layout_below="@id/upload_lostorfind_description_text"
                android:id="@+id/upload_lostorfind_description_img"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_takephoto"
                />

            <TextView
                android:layout_below="@id/upload_lostorfind_description_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="点击上传图片"
                android:layout_margin="5dp"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
