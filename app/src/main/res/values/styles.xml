    <!--<item name="android:windowFullscreen">true</item>-->
    <!--<item name="android:windowBackground">@drawable/welcome_bg</item>-->
    <!--</style>-->
    <!--toolbar返回箭头-->
    <style name="BlackToolbarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="WhiteToolbarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>


    <style name="MyButtonText">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyCaption">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="MyBody1">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="MyBody2">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MySubhead">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="MyTitle">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyHeadLine">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MyDisplay1">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="MyDisplay2">
        <item name="android:textSize">45sp</item>
    </style>

    <style name="MyDisplay3">
        <item name="android:textSize">56sp</item>
    </style>

    <style name="MyDisplay4">
        <item name="android:textSize">112sp</item>
    </style>

    <style name="ActivitySemiTransparent" parent="Theme.AppCompat">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Animations"/>

    <style name="Animations.PopUpMenu"/>

    <style name="Animations.PopUpMenu.Center">
        <item name="android:windowEnterAnimation">@anim/grow_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_top</item>
    </style>

    <style name="Animations.PopDownMenu"/>

    <style name="Animations.PopDownMenu.Center">
        <item name="android:windowEnterAnimation">@anim/grow_from_top</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_bottom</item>
    </style>

    <style name="Animations.PopUpRightMenu"/>
    <style name="Animations.PopUpRightMenu.Center">
        <item name="android:windowEnterAnimation">@anim/grow_from_right</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_right</item>
    </style>

    <style name="Animations.PopUpLeftMenu"/>
    <style name="Animations.PopUpLeftMenu.Center">
        <item name="android:windowEnterAnimation">@anim/grow_from_left</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_left</item>
    </style>
    
    <style name="xinjian_popUp_style">
        <item name="android:windowEnterAnimation">@anim/xinjian_pop_in</item>
        <item name="android:windowExitAnimation">@anim/xinjian_pop_out</item>
    </style>

    <style name="Dialog_Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="MyEditText">
        <item   name="colorControlNormal">@color/them</item>
        <item name="colorControlActivated">@color/them</item></style>

</resources>
